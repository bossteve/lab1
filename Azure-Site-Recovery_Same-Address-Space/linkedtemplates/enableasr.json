{
"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
"contentVersion": "1.0.0.0",
"parameters": {
    "RSVaultName": {
      "type": "string",
      "metadata": {
        "description": "Recovery Services Vault Name"
      }
    },
    "RecoveryVNetName": {
      "type": "string",
      "metadata": {
        "description": "Recovery VNet Name"
      }
    },    
    "DEDESName": {
      "type": "string",
      "metadata": {
        "description": "Double-Encrypted Disk Encryption Set Name"
      }
    }, 
    "Site1Name": {
        "type": "string",
        "metadata": {
            "description": "Site1 Naming Convention"
        }
    },   
    "Site2Name": {
        "type": "string",
        "metadata": {
            "description": "Site2 Naming Convention"
        }
    },            
    "SourceRG": {
        "type": "string",
        "metadata": {
            "description": "Source Resource Group"
        }
    }, 
    "TargetRG": {
        "type": "string",
        "metadata": {
            "description": "Target Resource Group"
        }
    },                    
    "Location1": {
        "type": "string",
      "metadata": {
        "description": "Site1 Resources Location"
      }
    },        
    "Location2": {
        "type": "string",
      "metadata": {
        "description": "Site2 Resources Location"
      }
    },             
    "vmName": {
        "type": "string",
      "metadata": {
        "description": "VM to Protect"
      }
    }, 
    "ManagedIDName": {
      "type": "string",
      "metadata": {
        "description": "Managed ID Name"
      }
    },               
    "ScriptName": {
        "type": "string",
      "metadata": {
        "description": "Script Name"
      }
    },         
    "ScriptLocation": {
        "type": "string",
      "metadata": {
        "description": "Script Location"
      }
    },
    "_artifactsLocation": {
        "type": "string",
        "metadata": {
            "description": "The location of resources, such as templates and DSC modules, that the template depends on"
        }
    },
    "_artifactsLocationSasToken": {
        "type": "securestring",
        "metadata": {
            "description": "Auto-generated token to access _artifactsLocation"
        }
    }    
},
"variables": {
    "ScriptURL": "[uri(parameters('_artifactsLocation'), concat('Scripts/enableasr.ps1', parameters('_artifactsLocationSasToken')))]"
},
"resources": [
    {
      "type": "Microsoft.Resources/deploymentScripts",
      "apiVersion": "2020-10-01",
      "name": "[parameters('ScriptName')]",
      "location": "[parameters('ScriptLocation')]",
      "kind": "AzurePowerShell",      
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('ManagedIDName'))]": {
          }
        }
      },
      "properties": {
        "azPowerShellVersion": "5.0",
        "timeout": "PT1H",
        "arguments": "[format(' -RSVaultName {0} -RecoveryVNetName {1} -DEDESName {2} -Site1Name {3} -Site2Name {4} -SourceRG {5} -TargetRG {6} -location1 {7} -location2 {8} -vmName {9}', parameters('RSVaultName'), parameters('RecoveryVNetName'), parameters('DEDESName'), parameters('Site1Name'), parameters('Site2Name'), parameters('SourceRG'), parameters('TargetRG'), parameters('Location1'), parameters('Location2'), parameters('vmName'))]", // can pass an argument string, double quotes must be escaped
        "primaryScriptUri": "[variables('ScriptURL')]",
        "cleanupPreference": "OnSuccess",
        "retentionInterval": "P1D"
      }
    }
  ]    
}

